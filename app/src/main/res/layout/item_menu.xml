<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/csstomtron"
    android:layout_height="130dp"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView

            android:src="@drawable/logo"
            android:id="@+id/img_mon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            >

        </ImageView>

        <LinearLayout
            android:layout_toRightOf="@id/img_mon"
            android:layout_toLeftOf="@id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Mamon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mã :">

            </TextView>

            <TextView
                android:id="@+id/txt_Tenmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tên món :">

            </TextView>

            <TextView
                android:id="@+id/txt_Soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Số Lượng :">

            </TextView>

            <TextView
                android:id="@+id/txt_Gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Giá :">

            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="30dp"
            android:src="@drawable/ic_delete"
            android:id="@+id/img_delete"
            android:layout_width="45dp"
            android:layout_height="45dp">

        </ImageView>

    </RelativeLayout>




</androidx.cardview.widget.CardView>